{
  "manifest_version": 2,
  "name": "multipass",
  "version": "1.1",
  "description": "Unofficial 1Password keychain access on Linux",
  "author": "Robbie Vanbrabant",
  "short_name": "multipass",

  "options_page": "options.html",

  "background": {
    "page": "background.html"
  },

  "permissions": [
    "idle",
    "nativeMessaging",
    "storage",
    "https://*/*"
  ],

  "icons": { 
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png" 
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+M",
        "mac": "Ctrl+M",
        "chromeos": "Ctrl+M",
        "linux": "Ctrl+M"
      }
    }
  },

  "browser_action": {
    "default_popup": "popup.html",
     "default_icon": {
       "19": "img/icon19.png",
       "38": "img/icon38.png"
     }
  }
}
