{
  "manifest_version": 2,
  "name": "multipass",
  "version": "1.0",
  "description": "1Password keychain access",
  "author": "Robbie Vanbrabant",

  "background": {
    "page": "background.html"
  },

  "permissions": [
    "nativeMessaging",
    "https://*/*"
  ],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+m",
        "mac": "Ctrl+Shift+m",
        "chromeos": "Ctrl+Shift+m",
        "linux": "Ctrl+Shift+m"
      }
    }
  },

  "browser_action": {
    "default_popup": "popup.html"
  }
}
